<div class="outfits-list">
  {{#each outfits}}
    <div class="outfits-item">
      <img
        src="{{this.image}}"
        alt="{{this.item_type}}"
      />
      <h2>{{this.item_type}}</h2>
      <h3>[{{this.brand}}]</h3>
    </div>
  {{/each}}
</div>

<!-- Pagination Controls for Outfits -->
<ul class="pagination">
  {{#if (gt totalOutfitsPages 1)}}
    {{#if (gt outfitsCurrentPage 1)}}
      <li><a
          href="?outfitsPage={{decrement outfitsCurrentPage}}&locationsPage={{locationsCurrentPage}}&foodsPage={{foodsCurrentPage}}"
        >Previous</a></li>
    {{/if}}

