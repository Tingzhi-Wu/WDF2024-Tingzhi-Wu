<div class="locations-list">
  {{#each locations}}
    <div class="locations-item">
      <h2>{{this.name}}</h2>
      <h3>{{this.type}}</h3>
      <p>In {{this.country}}</p>
      <p>{{this.address}}</p>
      <h4>{{this.year}}</h4>
      <a href="{{this.link}}" target="_blank">⥽ Click to View ⥼</a>
    </div>
  {{/each}}
</div>


<!-- pagination control -->
<ul class="pagination">
  {{#if (gt totalLocationsPages 1)}} <!-- check if there is more than 1 page -->
    {{#if (gt locationsCurrentPage 1)}} <!-- check if the current page is greater than 1 -->
      <li><a
          href="?locationsPage={{decrement locationsCurrentPage}}&outfitsPage={{outfitsCurrentPage}}&foodsPage={{foodsCurrentPage}}"
        >Previous</a></li>
    {{/if}}
    

    {{#if (lt locationsCurrentPage totalLocationsPages)}}
      <li><a
          href="?locationsPage={{increment locationsCurrentPage}}&outfitsPage={{outfitsCurrentPage}}&foodsPage={{foodsCurrentPage}}"
        >Next</a></li>
    {{/if}}
  {{/if}}
</ul>



