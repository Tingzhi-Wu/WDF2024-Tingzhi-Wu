
<div class="foods-list">
    {{#each foods}}
    <div class="foods-item">
        <h2>{{this.name}}</h2>
        <p>Brand: {{this.brand}}</p>
        <p>Price: {{this.price}}</p>
        <h4>Recommended by: {{this.recommended_by}}</h4>
    </div>
    {{/each}}
</div>


<!-- pagination control -->
<ul class="pagination">
  {{#if (gt totalFoodsPages 1)}} <!-- check if there is more than 1 page -->
    {{#if (gt foodsCurrentPage 1)}} <!-- check if the current page is greater than 1 -->
      <li><a
          href="?foodsPage={{decrement foodsCurrentPage}}&locationsPage={{locationsCurrentPage}}&outfitsPage={{outfitsCurrentPage}}"
        >Previous</a></li>
    {{/if}}

    {{#if (lt foodsCurrentPage totalFoodsPages)}}
      <li><a
          href="?foodsPage={{increment foodsCurrentPage}}&locationsPage={{locationsCurrentPage}}&outfitsPage={{outfitsCurrentPage}}"
        >Next</a></li>
    {{/if}}
  {{/if}}
</ul>


